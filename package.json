{
  "name": "@undercut/monorepo",
  "version": "1.0.0",
  "description": "A monorepo containing all undercut packages",
  "author": "Anton Alexandrenok",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "clear": ". scripts/clear.sh",
    "json": "json",
    "lerna": "lerna",
    "lint": "./scripts/lint.sh",
    "release": "lerna version --no-git-tag-version --no-private --no-push --conventional-commits",
    "test": "jest",
    "test:int": "jest --test-path-pattern='/.+\\.test\\.int\\.(c|m)?js$'",
    "test:unit": "jest --test-path-pattern='/.+\\.test\\.(c|m)?js$'"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@spyke/eslint-config": "^1.1.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "core-js": "^3.6.5",
    "eslint": "^7.5.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "json": "^9.0.6",
    "lerna": "^3.22.1"
  },
  "resolutions": {
    "**/shelljs": "^0.8.4"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "homepage": "https://undercut.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-spyke/undercut"
  }
}
